{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDirs": ["./src", "../shared/"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["src/**/*", "../shared/**/*", "src/declarations.d.ts"],
  "exclude": ["node_modules"]
}
